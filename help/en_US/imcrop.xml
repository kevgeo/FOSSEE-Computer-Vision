<?xml version="1.0" encoding="UTF-8"?>
<refentry version="5.0-subset Scilab" xml:id="imcrop" xml:lang="en_US"
					xmlns="http://docbook.org/ns/docbook"
					xmlns:xlink="http://www.w3.org/1999/xlink"
					xmlns:svg="http://www.w3.org/2000/svg"
					xmlns:ns3="http://www.w3.org/1999/xhtml"
					xmlns:mml="http://www.w3.org/1998/Math/MathML"
					xmlns:db="http://docbook.org/ns/docbook">

	<refnamediv>
		<refname>imcrop</refname>

		<refpurpose>Crops an image</refpurpose>
	</refnamediv>

	<refsynopsisdiv>
		<title>Calling Sequence</title>

		<synopsis>output_image = imcrop(input_image, int xvalue, int yvalue, int width, int height);</synopsis>
	</refsynopsisdiv>
	
	<refsection>
   		<title>Arguments</title>
		<variablelist>
			<varlistentry><term>input_image:</term>
				<listitem><para>the image matrix on which crop function has to be applied</para></listitem>
			</varlistentry>
			<varlistentry><term>xvalue:</term>
				<listitem><para>x-coordinate of top-left corner pixel</para></listitem>
			</varlistentry>
			<varlistentry><term>yvalue:</term>
				<listitem><para>y-coordinate of top-left corner pixel</para></listitem>
			</varlistentry>
			<varlistentry><term>width:</term>
				<listitem><para>width from the specified point</para></listitem>
			</varlistentry>
			<varlistentry><term>height:</term>
				<listitem><para>height from the specified point</para></listitem>
			</varlistentry>
		</variablelist>
	</refsection>
	
	<refsection>
		<title>Description</title>
		<para>
			The function crops the image using the specified values
		</para>
	</refsection>

	<refsection>
		<title>Example</title>
		<programlisting role="example"><![CDATA[
							a = imread("/home/Pictures/img.jpg");
							b=imcrop(a,10,10,100,100);
							imshow(b);
   		]]></programlisting>
	</refsection>

	<refsection>
		<title>Authors</title>

		<simplelist type="vert">
			<member>Sukul Bagai</member>
		</simplelist>
	</refsection>
</refentry>
